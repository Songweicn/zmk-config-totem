            bindings = <
       &kp EXCLAMATION  &kp AT_SIGN    &kp NUMBER_8  &kp DOLLAR            &kp PERCENT              &none      &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp SEMICOLON
       &kp CARET        &kp AMPERSAND  &kp ASTERISK  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS    &kp MINUS  &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &kp EQUAL
&none  &kp TILDE        &kp BACKSLASH  &kp PLUS      &kp LEFT_BRACKET      &kp RIGHT_BRACKET        &kp GRAVE  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp SLASH      &none
                                       &kp PERIOD    &kp NUMBER_0          &kp MINUS                &trans     &kp PERIOD    &kp NUMBER_0
            >;
        };

